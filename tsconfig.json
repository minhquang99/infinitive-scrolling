{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Path
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "src/public/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  // "include": ["src"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "services/plugins/facebook.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
